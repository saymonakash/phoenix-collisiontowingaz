---
import Header from "@/components/Header";
import Hero from "@/components/Hero.astro";
import Services from "@/components/Services.astro";
import CostCalculator from "@/components/CostCalculator";
import Contact from "@/components/Contact";
import Footer from "@/components/Footer.astro";
import StickyCallButton from "@/components/StickyCallButton";
import Layout from "@/layouts/Layout.astro";

export const prerender = true;

const city = "Mesa";
const seoData = {
  title: `Towing Service in ${city}, AZ | Collision Towing AZ`,
  description:
    `Your local ${city} towing service. 24/7 emergency towing and roadside assistance in ${city}, Arizona. Get a free estimate now.`,
  keywords:
    `towing service ${city}, ${city} towing, emergency towing ${city}, roadside assistance ${city}, tow truck ${city}`,
  canonicalUrl: `https://collisiontowingaz.com/${city.toLowerCase()}`,
};
---

<Layout {...seoData}>
  <div class="min-h-screen overflow-hidden">
    <Header client:load city={city} />
    <Hero city={city} />
    <Services city={city} />
    <CostCalculator client:load city={city} />
    <Contact client:load city={city} />
    <Footer city={city} />
    <StickyCallButton client:load />
  </div>
</Layout>